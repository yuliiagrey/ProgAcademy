import static javax.swing.JOptionPane.*;
public class Homework1_Serova {
    public static void main(String[] args) {
        int number, reminder;
        number=Integer.parseInt(
                showInputDialog("Enter an integer:")
        );
        reminder=number%3;
        String txt="You entered ";
        txt+="number"+(reminder==0? " divides into 3!": "doesn't divide into 3!");
        showMessageDialog(null,txt);

    }
}
